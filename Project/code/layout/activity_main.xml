<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <Button
        android:id = "@+id/btn_image_cardboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Image Cardboard"/>
    <Button
        android:id = "@+id/btn_video_cardboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Video Cardboard (with static logo)"/>
    <Button
        android:id = "@+id/btn_video_cardboard_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Video Cardboard (with subtitle)"/>

    <Button
        android:id = "@+id/btn_video_cardboard_anime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Video Cardboard (with animeated logo)"/>
</LinearLayout>